<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/theme_primary">

    <ImageView
        android:id="@+id/profile_picture_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        tools:src="@mipmap/ic_launcher"

        />

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_picture_imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/name_profile_picture_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_light"
        tools:text="Pedram" />

    <TextView
        android:id="@+id/extra_info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/profile_fragment_extra_info_bottom_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/text_light"
        tools:text="Extra Info" />

</RelativeLayout>