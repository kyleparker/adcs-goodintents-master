<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="actionBarIconColor">@color/text_light</item>
        <item name="actionBarInsetStart">@dimen/keyline_1</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="ActionBarThemeOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="actionMenuTextColor">@color/text_light</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#66ffffff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="ActionBar.ExpandedTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:visibility">gone</item>
    </style>

    <style name="BaseParentText">
        <item name="android:textColor">@color/text_body</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:autoLink">none</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextSmall" parent="@style/BaseParentText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextBody" parent="@style/BaseParentText">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextTitle" parent="@style/BaseParentText">
        <item name="android:textColor">@color/text_title_dark</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="TextSubTitle" parent="@style/BaseParentText">
        <item name="android:textColor">@color/text_title_dark_2</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="TextCaption" parent="@style/BaseParentText">
        <item name="android:textColor">@color/text_title_dark_2</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextHeader" parent="@style/BaseParentText">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_title_dark</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TextHeader.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextBody.SubHeader">
        <item name="android:autoLink">none</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_accent_dark</item>
    </style>

    <style name="TextBody.SubHeader.Light">
        <item name="android:textColor">@color/text_accent_light</item>
    </style>

    <style name="Widget.EditText"  parent="@style/BaseParentText">
        <item name="android:inputType">textAutoCorrect|textCapSentences</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Widget.EditText.Single">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.EditText.MultiLine">
        <item name="android:inputType">textAutoCorrect|textCapSentences|textMultiLine</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:singleLine">false</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>
